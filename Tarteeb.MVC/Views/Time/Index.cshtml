@model IEnumerable<Tarteeb.MVC.Models.TimeViewModel>
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.TaskId == 0)
                    {
                        <span>Free style</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TaskId)
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @{ var date = item.Date.ToString("dddd, dd MMMM yyyy");}
                    @Html.DisplayFor(modelItem => date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkHour)
                </td>
                <td>
                    @Html.ActionLink(linkText: "Edit",
                                     actionName: "Edit",
                                     controllerName: "Time",
                                     routeValues: new { id = item.Id },
                                     htmlAttributes: new { @class = "btn btn-sm btn-light" })

                    @using (Html.BeginForm("Delete", "Time", new { Id = item.Id }))
                    {
                        <input type="submit" class="btn btn-sm btn-light" value="Delete" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

